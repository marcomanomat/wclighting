<div class="container">
	<h2 class="center">Manufacturers</h2>
	<div><%= link_to 'Add New Manufacturer', new_manufacturer_path, class: 'link' %></div>
	<% if @manufacturers %>
		<div class="row">
				<% @manufacturers.each do |manufacturer| %>
				<div class="col s6 m4 l3">
					<div class="card center indigo lighten-2 hoverable">
							<div class="card-content indigo lighten-2">
								<span class="card-title "><%= manufacturer.name %></span>
								<a class="modal-trigger waves-effect waves-light" href="#modal<%= manufacturer.id %>"><img src="http://lorempixel.com/900/900/business/"></a>
							</div>
							<div class="card-action">
								<a href="<%= manufacturer.website %>"><%= manufacturer.website %></a>
							</div>
						</div>
					</div>
					<div id="modal<%= manufacturer.id %>" class="modal modal-fixed-footer">
						<div class="modal-content">
							<h4><%= manufacturer.name %></h4>
							<p><%= manufacturer.profile %></p>
						</div>
						<div class="modal-footer">
							<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
							<%= link_to 'Edit', edit_manufacturer_path(manufacturer), class: 'btn-flat' %>
							<%= link_to 'Delete', manufacturer_path(manufacturer),
								method: :delete,
								data: { confirm: 'Are you sure you want to delete this article?' }, class: 'btn-flat'  %>
						</div>
					</div>

				<% end %>
		</div>
	<% end %>
</div>
