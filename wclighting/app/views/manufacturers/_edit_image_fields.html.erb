<div class="nested-fields" style="padding-bottom: 10px;">

  <div class="field">
    <%= f.label :img, "Image(s)"%>
    <% if f.object.new_record? %>
      <%= f.file_field(:img) %>
    <% else %> 
      <%= image_tag(f.url(:thumb)) %>
      <%= f.hidden_field :_destroy %>
      <%= f.link_to_remove "X" %>
    <% end %>
  </div>
  <%= link_to_remove_association "Remove this Image", f %>
</div>