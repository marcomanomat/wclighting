
<%= form_for @manufacturer, :html => { :multipart => true } do |f| %>
  <div class="col-sm-6">
    <br><br>
    <%= f.label :name, "Manufacturer's Name:"%>
    <%= f.text_area(:name, placeholder: @manufacturer.name ) %>

    <%= f.label :profile, "Profile Description:"%>    
    <%= f.text_area(:profile, placeholder: @manufacturer.profile ) %>

    <%= f.label :website, "Website:"%>
    <%=f.text_area(:website, placeholder: @manufacturer.website ) %>
  </div>

  <div class="col-sm-6">
    
  <%= f.label :logo, "Logo"%>
  <%= f.file_field:logo %>


  <br><br>
  <div id="images"> 
    <%= f.fields_for :images, Image.new do |i| %>
      <%= render 'image_fields', :f => i %>
      <div class="add_image">
        <%= link_to_add_association 'Add Another Image', f, :images %>
      </div>
    <% end %>
  </div><br>

  <%= f.submit 'Edit Manufacturer'%>
  <% @manufacturer.errors.full_messages.each do |msg| %>
  <li>Error:  <%= msg %>.</li>
  </div>
<% end %>

  <div>
    <br>Manufacturer Image(s):<br>
    <%@manufacturer.images.each do |image|%>
    <%=fields_for image do |image_fields| %>
    <%= image_tag image.img.url(:small) %>
    <%= link_to 'Delete', manufacturer_image_path(@manufacturer, image), :confirm=> 'Are you sure?', :method=> :delete %>
    <br>


        <%end%>  
      <%end%>  

  </div>    

<% end %>