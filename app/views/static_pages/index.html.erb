    <div class="slider" id="main-slider">
      <ul class="slides">
        <%if Company.last%>
          <% Company.last.images.each do |image| %> 
        <li class="parallax">
                <%= image_tag(image.img_file_name) %>
        </li>
              <%end%> 
           <%else%>
          <h1>HI, CREATE YOUR COMPANY!</h1> 
        <%end%> 
      </ul>  
