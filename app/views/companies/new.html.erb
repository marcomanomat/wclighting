<div class="form container">
<%= form_for @company do |f| %>
  <div class="col-sm-6">
    <br><br>
    <%= f.label :name, "Your Company's Name:"%>
    <%= f.text_area(:name) %>

    <%= f.label :phone, "Phone:"%>    
    <%= f.text_area(:phone) %>

    <%= f.label :address, "Address:"%>
    <%=f.text_area(:address) %>

    <%= f.label :email, "Email:"%>    
    <%= f.text_area(:email) %>

  </div>

  <div class="col-sm-6">
    

  <br><br>
  <div id="images"> 
    <%= f.fields_for :images, Image.new do |i| %>
      <%= render 'image_fields', :f => i %>
      <div class="add_image">
        <%= link_to_add_association 'Add Another Image', f, :images %>
      </div>
    <% end %>
  </div>

  </div>  
  <%= f.submit 'Upload Your Company'%>
  <% @company.errors.full_messages.each do |msg| %>
  <li>Error:  <%= msg %>.</li>
  </div>
<% end %>
<% end %>
</div>